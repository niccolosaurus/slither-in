<form id="animal-form" class="columns">
    <div class="column">

        <section id="firstRow">
            <div class="columns">
                <div class="container column">
                    <div action="/file-upload" class="dropzone" id="my-form">
                {{!-- <input type="file" name="myFile" id="myFile">  --}}
                    </div>

                    <pre id="output"></pre>
                </div>

                <div class="column">
                    <div class="rows">
                        <div class="row">
                            <div class="columns">
                                <div class="formCard column">
                                    <p>Name or ID:</p>
                                    <input type="text" name="name" id="name">
                                </div>
                                <div class="formCard column">
                                    <p>Type:</p>
                                    <select name="type" id="animalType">
                                        <option></option>
                                        <option value="Snake">Snake</option>
                                        <option value="Lizard">Lizard</option>
                                        <option value="Tortoise">Tortoise</option>
                                    </select>
                                </div>
                                <div class="formCard column">
                                    <p>Species:</p>
                                    <select name="species" id="species">
                                        {{!-- species populated by javascript dynamically --}}
                                    </select>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="columns">
                                <div class="formCard column">
                                    <p>Sex</p>
                                    <select name="sex" id="sex">
                                        {{!-- <option value="blank" id="blank"></option> --}}
                                        <option></option>
                                        <option value="female">Female</option>
                                        <option value="male" id="male">Male</option>

                                    </select>
                                </div>
                                <div class="formCard column">
                                    <p>Age:</p>
                                    <select name="age" id="age">
                                        <option value="Under a Year">Less Than One Year</option>
                                        <option value="1 Year">1 Year</option>
                                        <option value="2 Years">2 Years</option>
                                        <option value="3 Years">3 Years</option>
                                        <option value="4 Years">4 Years</option>
                                        <option value="5 Years">5 Years</option>
                                        <option value="6 Years">6 Years</option>
                                        <option value="7 Years">7 Years</option>
                                        <option value="8 Years">8 Years</option>
                                        <option value="9 Years">9 Years</option>
                                        <option value="10 Years">10 Years</option>
                                        <option value="10+ Years">Over 10 years</option>
                                    </select>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section id="secondRow">
            <div class="rows">
                <div class="row">
                    <div class="columns">
                        <div class="formCard column">
                            <p>Pattern/Morph:</p>
                            <input type="text" name="pattern" id="pattern">
                        </div>
                        <div class="formCard column">
                            <p>Description/Notes:</p>
                            <input type="text" name="description" id="description">
                        </div>
                    </div>

                </div>

                <div class="row">
                    <div class="columns">
                        <div class="formCard column" id="maleHidden">
                            <p>Gravid:</p>
                            <input type="checkbox" id="gravid" onclick="onClick()" />
                            <h4 id="gravid-message" style="color: green">Expect eggs in 28 to 48 days!</h4>
                            {{!-- <p id="gravidChecked">Expect eggs in 28 to 48 days</p> --}}
                        </div>
                        <div class="formCard column">
                            <p>For Sale</p>
                            <input type="checkbox" id="forSale" name="forSale">
                        </div>
                        <div class="formCard column" id="maleHidden">
                            <p>Deceased</p>
                            <input type="checkbox" id="deceased" name="deceased">
                        </div>
                        <div class="formCard column">
                            <p>Breeding History</p>
                            <select name="breeding" id="breeding">
                                <option></option>
                                <option value="Low Risk">Low Risk</option>
                                <option value="High Risk">High Risk</option>
                        </div>
                    </div>

                </div>

            </div>

        </section>
    </div>

    <div class="column">
        {{!-- <div id="sidepanel">
            <div class="formCard">
                <p>Male Parent</p>
                <button id="maleAdd">Add Parent</button>
            </div>
            <div class="formCard">
                <p>Male Parent</p>
                <button id="femaleAdd">Add Parent</button>
            </div>
        </div> --}}
        <button id="submitForm">Add Animal</button>
    </div>
</form>
