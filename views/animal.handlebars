                <div action="/file-upload" class="dropzone" id="my-form">
                    <pre id="output"></pre>
                </div>

            </div>
            <div class="container is-flex is-justify-content-center mt-1">
                <div>
                    <div class="is-flex is-justify-content-center">
                        <button id="animal-form" class="button is-link">Add Animal</button>
                    </div>
                </div>
            </div>
            <section class="py-4"></section>
    </section>


</form>

