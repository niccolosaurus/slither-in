<section class="hero is-primary has text-centered">
    <div class="hero-body has-text-centered">
        <p class="title">
            Create an Animal
        </p>
    </div>
</section>


<form id="animal-form" class="rows mt-2 mx-0 px-0">

    <div class="row mt-5">

        <section id="firstRow">
            <div class="columns is-gapless mx-0">


                <div class="column is-full mx-0">
                    <div class="rows">
                        <div class="row">
                            <div class="columns is-gapless">
                                <div
                                    class="formCard column box has-background-info mx-3 is-flex is-justify-content-center mt-1">
                                    <div>
                                        <p class="has-text-centered has-text-white has-text-weight-bold py-4 ">Name or
                                            ID:</p>
                                        <input type="text" name="name" id="name" class="input px-auto"> </input>
                                        <p class="pb-5"></p>
                                    </div>

                                </div>
                                <div
                                    class="formCard column box has-background-info mx-3 is-flex is-justify-content-center mt-1">
                                    <div>
                                        <p class="has-text-centered has-text-white has-text-weight-bold py-4">Type:</p>
                                        <div class="control">
                                            <div class="select">
                                                <select name="type" id="animalType" class="px-auto mx-0">
                                                    <option></option>
                                                    <option value="Snake">Snake</option>
                                                    <option value="Lizard">Lizard</option>
                                                    <option value="Tortoise">Tortoise</option>
                                                </select>
                                            </div>
                                        </div>
                                        <p class="pb-5"></p>
                                    </div>

                                </div>
                                <div
                                    class="formCard column box has-background-info mx-3 is-flex is-justify-content-center mt-1">
                                    <div>
                                        <p class="has-text-centered has-text-white has-text-weight-bold py-4">Species:
                                        </p>
                                        <div class="control">
                                            <div class="select">
                                                <select name="species" id="species" class="px-auto mx-0">
                                                    {{!-- species populated by javascript dynamically --}}
                                                </select>
                                            </div>
                                        </div>
                                        <p class="pb-5"></p>
                                    </div>

                                </div>
                            </div>

                        </div>

                        <div class="row mt-1">
                            <div class="columns is-gapless">
                                <div class="column is-3"></div>
                                <div
                                    class="formCard column is-3 box has-background-info mx-3 is-flex is-justify-content-center mt-1">
                                    <div>
                                        <p class="has-text-centered has-text-white has-text-weight-bold py-4">Sex</p>
                                        <div class="control">
                                            <div class="select">
                                                <select name="sex" id="sex" class="px-auto mx-0">
                                                    {{!-- <option value="blank" id="blank"></option> --}}
                                                    <option></option>
                                                    <option value="Female">Female</option>
                                                    <option value="Male" id="male">Male</option>
                                                </select>
                                            </div>
                                        </div>
                                        <p class="pb-5"></p>
                                    </div>
                                </div>
                                <div
                                    class="formCard column is-3 box has-background-info mx-3 is-flex is-justify-content-center mt-1">
                                    <div>
                                        <p class="has-text-centered has-text-white has-text-weight-bold py-4">Age:</p>
                                        <div class="control">
                                            <div class="select">
                                                <select name="age" id="age" class="px-auto">
                                                    <option value="Under a Year">Less Than One Year</option>
                                                    <option value="1 Year">1 Year</option>
                                                    <option value="2 Years">2 Years</option>
                                                    <option value="3 Years">3 Years</option>
                                                    <option value="4 Years">4 Years</option>
                                                    <option value="5 Years">5 Years</option>
                                                    <option value="6 Years">6 Years</option>
                                                    <option value="7 Years">7 Years</option>
                                                    <option value="8 Years">8 Years</option>
                                                    <option value="9 Years">9 Years</option>
                                                    <option value="10 Years">10 Years</option>
                                                    <option value="10+ Years">Over 10 years</option>
                                                </select>
                                            </div>
                                        </div>
                                        <p class="pb-5"></p>
                                    </div>
                                </div>
                                <div class="column is-3"></div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>

        <section id="secondRow">
            <div class="rows">
                <div class="row mt-1">
                    <div class="columns is-gapless">
                        <div
                            class="formCard column box has-background-info mx-3 is-flex is-justify-content-center mt-1 mx-0">
                            <div>
                                <p class="has-text-centered has-text-white has-text-weight-bold py-4">Pattern/Morph:</p>
                                <textarea type="text" name="pattern" id="pattern" class="textarea px-auto mx-0"
                                    rows="5"></textarea>
                                <p class="pb-5"></p>
                            </div>
                        </div>
                        <div
                            class="formCard column box has-background-info mx-3 is-flex is-justify-content-center mt-1">
                            <div>
                                <p class="has-text-centered has-text-white has-text-weight-bold py-4">Description/Notes:
                                </p>
                                <textarea type="text" name="description" id="description" class="textarea px-auto"
                                    rows="5"></textarea>
                                <p class="pb-5"></p>
                            </div>
                        </div>

                        <div
                            class="formCard column box has-background-info mx-3 is-flex is-justify-content-center mt-1 mx-0">
                            <div class="px-0">
                                <p class="has-text-centered has-text-white has-text-weight-bold py-4">Breeding History
                                </p>
                                <textarea type="text" name="breeding" id="breeding" class="textarea mx-0 px-auto"
                                    rows="5"> </textarea>
                                <p class="pb-5"></p>
                            </div>
                        </div>


                    </div>

                </div>

                <div class="row mt-1">
                    <div class="columns is-gapless">
                        <div class="formCard column box has-background-info mx-3 is-flex is-justify-content-center mt-1">
                            <div id="maleHidden" class="maleHidden">
                                <p class="has-text-centered has-text-white has-text-weight-bold py-4">Gravid:</p>
                                <label class="checkbox">
                                    <input type="checkbox" id="gravid" onclick="onClick()"></input>
                                </label>
                                <div class="is-flex is-justify-content-center">
                                    <h4 id="gravid-message" style="color: white">Expect eggs in 28 to 48 days!</h4>
                                    {{!-- <p id="gravidChecked">Expect eggs in 28 to 48 days</p> --}}
                                </div>
                                <p class="pb-5"></p>
                            </div>
                        </div>

                        <div
                            class="formCard column box has-background-info mx-3 is-flex is-justify-content-center mt-1">
                            <div>
                                <p class="has-text-centered has-text-white has-text-weight-bold py-4">For Sale</p>
                                <label class="checkbox">
                                    <input type="checkbox" id="forSale" name="forSale" onclick="onClick()">
                                    <h4 id="for-sale-message" style="color: white">Many Fortunes to You</h4>
                                </label>
                                <p class="pb-5"></p>
                            </div>
                        </div>
                        <div class="formCard column box has-background-info mx-3 is-flex is-justify-content-center mt-1"
                            id="maleHidden">
                            <div>
                                <p class="has-text-centered has-text-white has-text-weight-bold py-4">Deceased</p>
                                <label class="checkbox">
                                    <input type="checkbox" id="deceased" name="deceased" onclick="onClick()">
                                    <h4 id="deceased-message" style="color: white">Sorry for your loss</h4>
                                </label>
                                <p class="pb-5"></p>
                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </section>
    </div>

